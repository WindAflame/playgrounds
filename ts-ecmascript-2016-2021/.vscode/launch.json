{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch current file w/ node",
        "args": ["${relativeFile}"],
        "cwd": "${workspaceRoot}",
        "internalConsoleOptions": "openOnSessionStart"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Launch current file w/ ts-node",
        "args": ["${relativeFile}"],
        "cwd": "${workspaceRoot}",
        "runtimeArgs": ["-r", "ts-node/register"],
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }